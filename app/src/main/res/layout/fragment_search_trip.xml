<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SearchTripContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchTrip">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reset_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/reload_icon"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="10"
                android:padding="10dp"
                android:id="@+id/searchRoute_editText"
                android:hint="Enter city or tags."
                android:layout_gravity="center"/>


            <ImageView
                android:id="@+id/filteringButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:src="@drawable/filter_icon"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>



        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/outer_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E3D2DD"/>

    </LinearLayout>


</FrameLayout>